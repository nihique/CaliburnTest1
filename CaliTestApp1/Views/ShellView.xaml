<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="CaliTestApp1.Views.ShellView"
>
    <Grid MinWidth="300" MinHeight="300">
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}"/>
        </Grid.Background>
        <RepeatButton Content="And then we doubled it! (Jay Wilson)" VerticalAlignment="Top" Margin="10,10,10,0" cal:Message.Attach="ChangeCount(+Count.Text)" />
        <RepeatButton Content="+2" VerticalAlignment="Top" Margin="10,40,10,0" cal:Message.Attach="ChangeCount(2)" />
        <RepeatButton Content="+1" VerticalAlignment="Top" Margin="10,70,10,0" cal:Message.Attach="ChangeCount(1)" />
        <RepeatButton Content="-1" VerticalAlignment="Top" Margin="10,100,10,0" cal:Message.Attach="ChangeCount((-1))" />
        <RepeatButton Content="-2" VerticalAlignment="Top" Margin="10,130,10,0" cal:Message.Attach="ChangeCount(-2)" />
        <RepeatButton Content="I will cut you to two pieces!" VerticalAlignment="Top" Margin="10,160,10,0" cal:Message.Attach="ChangeCount(-Count.Text)" />
        <TextBlock x:Name="Count" Text="50" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48"/>
    </Grid>

</Window>